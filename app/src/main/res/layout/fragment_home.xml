<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/title_Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/title_Home"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="800dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_card_corners"
                android:paddingTop="15dp"
                android:text="Day"
                android:textAlignment="center"
                android:textColor="@color/nav_clicked"
                android:textSize="23sp"
                android:textStyle="bold"


                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_card_corners"
                android:paddingTop="15dp"
                android:text="Week"
                android:textAlignment="center"
                android:textColor="@color/nav_clicked"
                android:textSize="23sp"
                android:textStyle="bold"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_card_corners"
                android:paddingTop="15dp"
                android:text="Month"
                android:textAlignment="center"
                android:textColor="@color/nav_clicked"
                android:textSize="23sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/title_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="10dp"
        android:text="@string/title_Expenses"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="270dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/expenseCard1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Expense01"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/expenses_cards"
                    android:gravity="center"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/expenseCard2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Expense02"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/expenses_cards"
                    android:gravity="center"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/expenseCard3"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Expense03"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/expenses_cards"
                    android:gravity="center"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/expenseCard4"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Expense04"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/expenses_cards"
                    android:gravity="center"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/expenseCard5"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Expense05"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/expenses_cards"
                    android:gravity="center"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/expenseCard6"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Expense06"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/expenses_cards"
                    android:gravity="center"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/expenseCard7"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Expense07"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/expenses_cards"
                    android:gravity="center"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/expenseCard8"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Expense08"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/expenses_cards"
                    android:gravity="center"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</FrameLayout>